<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/header.ejs')  %>

</head>

<body>

    <%- include('../layouts/navbar.ejs')  %>
    <%- include('../layouts/sidebar.ejs')  %>

    <div class="page-body">

        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="page-header">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="page-header-left">
                            <h3>Add Branch
                                <small>FoodApp</small>
                            </h3>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ol class="breadcrumb pull-right">
                            <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                            <li class="breadcrumb-item active">Add Branch</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->

        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="card tab2-card">
                <div class="card-header">
                    <h5>Branch Details</h5>
                </div>
                <div class="card-body">
                    <% if(error && error.length > 0){ %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } else if(success && success.length > 0 ){ %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                    <% } %>
                    <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                        <form class="needs-validation" novalidate=""
                            method="post" action="/branches/<%= (pg_mode=='add')?'add':'update' %><%= (pg_mode=='edit')?'/' + branch_info._id:'' %>">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group row">
                                        <label for="branch-name" class="col-xl-3 col-md-4"><span>*</span> Branch Name</label>
                                        <input class="form-control col-md-7" id="branch-name" type="text" required
                                            name="branch-name" value="<%= (pg_mode=='edit')?branch_info.name:'' %>">
                                    </div>
                                    <div class="form-group row">
                                        <label for="branch-code" class="col-xl-3 col-md-4"><span>*</span>Branch Code</label>
                                        <input class="form-control col-md-7" id="branch-code" type="text" required
                                            name="branch-code" value="<%= (pg_mode=='edit')?branch_info.code:'' %>">
                                    </div>
                                    <div class="form-group row">
                                        <label for="branch-address" class="col-xl-3 col-md-4"><span>*</span>Branch Address</label>
                                        <input class="form-control col-md-7" id="branch-address" type="text" required
                                            name="branch-address" value="<%= (pg_mode=='edit')?branch_info.address:'' %>">
                                    </div>
                                    <div class="form-group row">
                                        <label for="branch-startTime" class="col-xl-3 col-md-4"><span>*</span>Start Time</label>
                                        <input class="form-control col-md-7" id="branch-startTime" type="text" required
                                            name="branch-startTime" value="<%= (pg_mode=='edit')?branch_info.startTime:'' %>">
                                    </div>
                                    <div class="form-group row">
                                        <label for="branch-endTime" class="col-xl-3 col-md-4"><span>*</span>End Time</label>
                                        <input class="form-control col-md-7" id="branch-endTime" type="text" required
                                            name="branch-endTime" value="<%= (pg_mode=='edit')?branch_info.endTime:'' %>">
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-md-4">Status</label>
                                        <div class="checkbox checkbox-primary col-md-7">
                                            <input id="branch-status" type="checkbox" name="branch-status" 
                                                <%= (pg_mode=='edit' && branch_info.status==true)?'checked':'' %>>
                                            <label for="branch-status">Status</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->

    </div>

    <%- include('../layouts/footer.ejs')  %>
    <%- include('../layouts/script.ejs')  %>

    <!--right sidebar js-->
    <script src="/assets/js/chat-menu.js"></script>

    <!-- form validation js-->
    <script src="/assets/js/dashboard/form-validation-custom.js"></script>

    <script>
        (function($) {
            "use strict";

            $('#check-test').click(function(){
                alert($('#branch-status').val())
            })
        })(jQuery);
    </script>
</body>
</html>



